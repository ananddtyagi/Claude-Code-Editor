{
  "name": "claude-code-editor",
  "displayName": "Claude Code Editor",
  "description": "A lightweight VS Code extension that creates an interface for Claude Code with file context support",
  "publisher": "AnandTyagi",
  "version": "0.0.5",
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:claude-code-extension.openChat",
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "claude-code-extension.openChat",
        "title": "Open Claude Code Chat"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "webpack --mode production",
    "webpack": "webpack --mode development",
    "webpack-dev": "webpack --mode development --watch",
    "compile": "tsc -p ./",
    "lint": "eslint src --ext ts",
    "package": "npx @vscode/vsce package"
  },
  "devDependencies": {
    "@types/node": "^16.18.126",
    "@types/vscode": "^1.96.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vscode/vsce": "^3.3.2",
    "eslint": "^8.57.1",
    "ts-loader": "^9.5.2",
    "typescript": "^5.8.3",
    "webpack": "^5.99.8",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "parse-diff": "^0.11.1"
  },
  "keywords": [
    "claude",
    "ai",
    "code",
    "assistant"
  ],
  "author": "Anand Tyagi ü§ù Claude Code",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ananddtyagi/Claude-Code-Editor"
  }
}
